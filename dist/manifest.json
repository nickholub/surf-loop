{
  "manifest_version": 3,
  "name": "Surfline",
  "version": "1.0",
  "description": "Surfline Webcam",
  "content_scripts": [
    {
      "matches": [
        "https://www.surfline.com/surf-report/*"
      ],
      "js": [
        "src/content.js-loader.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "**/*",
        "*"
      ],
      "use_dynamic_url": false
    }
  ]
}
