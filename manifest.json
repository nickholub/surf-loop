{
  "manifest_version": 3,
  "name": "SurfLoop",
  "version": "1.0",
  "description": "Fullscreen surf cam viewer with auto-rotation",
  "permissions": ["storage"],
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.surfline.com/surf-report/*"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_end"
    }
  ]
}